{
  "name": "ai-readiness-dojo",
  "version": "1.0.0",
  "description": "A monorepo demonstrating AI-readiness best practices with Svelte and Fastify",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "pnpm -r run type-check",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "circular:check": "pnpm circular:check:client && pnpm circular:check:server",
    "circular:check:client": "madge --circular --extensions ts,svelte --json apps/client/src > /tmp/client-circular.json",
    "circular:check:server": "madge --circular --extensions ts --json apps/server/src > /tmp/server-circular.json",
    "deps:graph": "pnpm deps:graph:client && pnpm deps:graph:server",
    "deps:graph:client": "madge --extensions ts,svelte --json apps/client/src > docs/dependencies/client-deps.json",
    "deps:graph:server": "madge --extensions ts --json apps/server/src > docs/dependencies/server-deps.json",
    "deps:check-coupling": "node scripts/check-coupling.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "madge": "^8.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.2",
    "svelte-eslint-parser": "^1.4.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
