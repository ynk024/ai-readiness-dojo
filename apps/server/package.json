{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "emulator:start": "firebase emulators:start --only firestore",
    "emulator:export": "firebase emulators:export ./emulator-data",
    "emulator:import": "firebase emulators:start --only firestore --import=./emulator-data",
    "test:integration": "vitest run tests/integration",
    "seed:quests": "tsx src/infrastructure/scripts/seed-quests.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.2.0",
    "firebase-admin": "^13.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "firebase-tools": "^15.5.1",
    "tsx": "^4.19.2"
  }
}
